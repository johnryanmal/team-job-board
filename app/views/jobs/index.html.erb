<h1>Job Index</h1>
<% if @jobs.empty? %>
  <p>No active jobs.</p>
<% else %>
  <% @jobs.each do |job| %>
    <hr />
    <h2><%= job.title %></h2>
    <% unless job.tags.empty? %>
      <p><strong>Tagged:</strong> <%= job.tags.map(&:name).join(', ') %></p>
    <% end %>
    <p><%= job.description %></p>
  <% end %>
<% end %>